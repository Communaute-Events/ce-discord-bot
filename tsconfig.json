{
    "ts-node": {
        "files": true
    },
    "compilerOptions": {
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "baseUrl": "./",
        "moduleResolution": "node",
        "module": "CommonJS",
        "moduleDetection": "force",
        "paths": {
            "@src/*": ["src/*"],
            "@config/*": ["config/*"],
            "@core/*": ["src/core/*"],
            "@types/*": ["src/@types/*"],
            "@embeds/*": ["src/embeds/*"],
            "@img/*": ["src/img/*"],
        },
        "typeRoots": [
            "src/@types",
            "node_modules/@types"
        ],
        "outDir": "dist",
        "target": "es2020"
    },
    "exclude": [
        "node_modules"
    ]
}